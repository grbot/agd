process {
    cache = true
    stageInMode='symlink'
    stageOutMode='rsync'
}

params {
    // Baylor VCF dir containg files generated by EMile. 
    baylor_vcf_dir = "/global5/scratch/gerrit/projects/gapw/GAPW_DATA/baylor/PHASED"

    // Sample to population mapping
    sample_to_population_mapping_dir = "/global5/scratch/gerrit/projects/gapw/sample_to_population_mapping/baylor" 

    // Per population VCFs dir
    split_per_pop_vcfs_dir = "/global5/scratch/gerrit/projects/gapw/nextflow/baylor_split_per_pop_vcfs"

    // Test output directory
    test_out_dir = "global5/scratch/gerrit/projects/gapw/nextflow-test/out"

    project_name = "agd-baylor"
}

executor{
    jobName = { "$task.tag" } 
}

profiles{
    standard {
        process.executor = 'local'
    }

   pbs {
        process.executor = 'pbs'
        process.queue = 'dev'
	process.clusterOptions = '-M gerrit.botha@uct.ac.za -m abe'
    }
}

